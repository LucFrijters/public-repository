# Git Global Configuration Example
# Copy to ~/.gitconfig and customize

[user]
    # name = Your Name
    # email = your.email@example.com

[core]
    editor = vim
    autocrlf = input

[alias]
    st = status
    co = checkout
    br = branch
    ci = commit
    unstage = reset HEAD --
    last = log -1 HEAD
    visual = log --graph --oneline --all

[color]
    ui = auto

[pull]
    rebase = false

[init]
    defaultBranch = main
